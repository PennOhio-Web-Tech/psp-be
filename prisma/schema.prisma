generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id         String     @id @default(uuid())
  name       String
  categories Category[]

  @@map("menu")
}

model Category {
  id          String    @id @default(uuid())
  name        String
  products    Product[]
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  menu        Menu      @relation(fields: [menuId], references: [id])
  menuId      String

  @@map("category")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       Float
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  topping     Topping[]
  Order       Order?    @relation(fields: [orderId], references: [id])
  orderId     String?

  @@map("product")
}

model Topping {
  id          String    @id @default(uuid())
  name        String
  priceSmall  Float?
  priceMedium Float?
  priceLarge  Float?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  product     Product[]
}

model Order {
  id       String    @id @default(uuid())
  subtotal Float
  tax      Float
  total    Float
  paidWith String
  products Product[]

  @@map("order")
}
