{
  "name": "project-psp-be",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon -L --config nodemon.json src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.prod.json",
    "start": "yarn build && node src/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --coverage --watch --onlyChanged --runInBand",
    "test:clear": "jest --clearCache",
    "test:clean": "rm -rf coverage && yarn test:clear",
    "view:coverage": "npx serve coverage/lcov-report",
    "docker:dev": "yarn docker:down && docker-compose -f docker/development/docker-compose.dev.yml up --build --remove-orphans",
    "docker:test": "yarn docker:down && docker-compose -f docker/testing/docker-compose.test.yml up --build --remove-orphans",
    "docker:dev:down": "docker-compose -f docker/development/docker-compose.dev.yml down",
    "docker:test:down": "docker-compose -f docker/testing/docker-compose.test.yml down -v",
    "docker:down": "yarn docker:dev:down && yarn docker:test:down",
    "docker:test:run": "yarn prisma:migrate && yarn dev",
    "prepare": "husky install",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "set:env": "cp .env.example .env.development && cp .env.example .env.testing && cp .env.example .env.test.local"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.11.0",
    "@prisma/client": "3.12.0",
    "@types/fs-extra": "^9.0.13",
    "@types/json2csv": "^5.0.3",
    "@types/multer": "^1.4.7",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "fs-extra": "^10.1.0",
    "helmet": "^5.0.2",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.10.7",
    "multer": "^1.4.5-lts.1",
    "nanoid": "3.3.4",
    "node": "^19.0.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.23",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "2.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prisma": "^4.6.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.{ts, js}": [
      "yarn lint",
      "yarn format",
      "yarn test --findRelatedTests --bail"
    ]
  }
}
